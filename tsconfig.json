{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2015",
      "ES2016.Array.Include",
      "ES2017.Object"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmit": true,
    "removeComments": true,
    "noUnusedLocals": true,
		"importHelpers": true
  },
  "include": [
    "src"
  ]
}
